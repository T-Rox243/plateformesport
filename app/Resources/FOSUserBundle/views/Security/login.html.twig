{% extends "FOSUserBundle::layout.html.twig" %}

{% block fos_user_content %}
	<div class="col-md-4 col-md-offset-4 signIn">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h1 class="panel-title">Connexion</h1>
            </div>
            <div class="panel-body">
			    {% if error %}
				    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
				{% endif %}
                <form accept-charset="UTF-8" role="form" action="{{ path("fos_user_security_check") }}" method="post">
				    {% if csrf_token %}
				        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
				    {% endif %}
                    <fieldset>
                        <div class="form-group">
                            <input class="form-control" placeholder="E-mail" type="text" id="username" name="_username" value="{{ last_username }}" required="required">
                        </div>
                        <div class="form-group">
                            <input class="form-control" placeholder="Mot de passe"  type="password" id="password" name="_password" required="required">
                        </div>
                        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
						<label for="remember_me">Se souvenir de moi</label>

                        <input class="btn btn-lg btn-success btn-block" type="submit" id="_submit" name="_submit" value="Se connecter">

                    </fieldset>
                </form>
            </div>
        </div>
    </div>
{% endblock fos_user_content %}