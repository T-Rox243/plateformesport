{% extends "::base.html.twig" %}

{% block title %}PlateformeSport - {{ nameEvent }}{% endblock %}

{% block body %}
<div id="wrapper">
        <div class="container" style="text-align:center;">
        	{% if createUserConnected %}
		    	<div class="row" style="margin-top:2%;">
		    		<a href="{{ path('editEvent', {'idEvent': idEvent}) }}">
	        			<button type="button" class="btn btn-success">Modifier l'évènement</button>
	        		</a>
		    	</div>
		    {% endif %}

			<h1>{{ nameEvent }}</h1>
			<img src="{{ asset('images/derby.jpg') }}" alt="{{ nameEvent }}" class="img-thumbnail img-sport-fiche">
			<div class="row">
		        <div class="col-md-12">
                    <p>{{ descriptionEvent }}</p>
		        </div>
		        <div class="col-md-12">
                    <p>Type d'evenement : {{ typeEvent }}</p>
		        </div>
		        <div class="col-md-12">
                    <p>Nom du créateur : {{ userEvent.name }} {{ userEvent.firstname }}</p>
		        </div>
		        <div class="col-md-offset-3 col-md-6">
                    <a href="{{ path('addBenevole', {'idEvent' : idEvent }) }}" class="btn btn-default btn-block">Devenir Benevole</a>
		        </div>
		    </div>
		</div>
	</div> 

{% endblock %}
