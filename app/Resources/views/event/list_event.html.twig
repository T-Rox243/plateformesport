{% extends "::base.html.twig" %}

{% block title %}PlateformeSport - Liste des événements{% endblock %}

{% block body %}
<div id="wrapper">
    <div class="container">
		<h1>Trouver un événement</h1>

		<br>
		<div id="custom-search-input">
		    <div class="input-group col-md-8 searchBar">
		        <input type="text" class="search-query form-control" placeholder="Rechercher un événement" />
		        <span class="input-group-btn">
		            <button class="btn btn-search" type="button">
		                <i class="glyphicon glyphicon-search"></i>
		            </button>
		      	</span>
		    </div>
		</div>

		<div class="row">
			<div class="col-md-12 text-center">
				<a href="{{ path('addEvent') }}">
					<button type="button" class="btn btn-success">Ajouter un Evenement</button>
				</a>
			</div>
		</div>

		<div class="row">
			{% for event in allEvent %}
				<div class="col-md-4 well" style="background-color:transparent;">
					<div class="row">
						<div class="col-md-1"></div>
						<div class="col-md-10" style="background:#bdd2ce; border-radius: 2%;">
							<div class="results">
								<div style="margin-top:2%;"></div>
								<img src="{{ asset('images/derby.jpg') }}" alt="{{ event.name }}" class="img-circle img-thumbnail img-sport">
								<h2>{{ event.name }}</h2>
								<p>{{ event.description }}</p>
								<p>{{ event.typeEvent }}</p>
								<div ><a href="{{ path('infoEvent', {'idEvent': event.id}) }}" class="btn btn-default btn-block">En savoir plus</a></div>
								<div style="margin-bottom:2%;"></div>
							</div>
						</div>
						<div class="col-md-1"></div>
					</div>
				</div>
			{% endfor %}
	    </div>
	</div>
</div>
{% endblock %}
